    <Button
        android:id="@+id/logOut"
        android:layout_width="88dp"
        android:layout_height="49dp"
        android:text="Log Out"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        tools:layout_editor_absoluteX="14dp" />

    <Button
        android:id="@+id/newSighting"
        android:layout_width="127dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:text="New Report"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="450dp" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:text="Map"
        android:layout_below="@+id/ratList"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/ratList"
        app:layout_constraintRight_toLeftOf="@+id/newSighting"
        android:layout_marginRight="24dp"
        app:layout_constraintLeft_toRightOf="@+id/graphButton"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/graphButton"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:text="graph"
        android:layout_below="@+id/ratList"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/ratList"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="-49dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/ratList"
        android:layout_width="378dp"
        android:layout_height="391dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toTopOf="@+id/newSighting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <!--</RelativeLayout>-->
</android.support.constraint.ConstraintLayout>